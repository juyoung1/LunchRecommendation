<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <!-- 헤더 -->
    <include
        android:id="@+id/incHeader"
        layout="@layout/inc_common_header_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 앱 이름 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleA"
        style="@style/sharpsansBold.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/home_text_9"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incHeader" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAppName"
        style="@style/robotoRegular.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleA"
        app:layout_constraintStart_toEndOf="@id/tvTitleA"
        app:layout_constraintTop_toTopOf="@id/tvTitleA" />

    <!-- 만든 사람 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleB"
        style="@style/sharpsansBold.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/home_text_10"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvTitleA"
        app:layout_constraintTop_toBottomOf="@id/tvTitleA" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMake"
        style="@style/robotoRegular.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="이주영"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleB"
        app:layout_constraintStart_toEndOf="@id/tvTitleB"
        app:layout_constraintTop_toTopOf="@id/tvTitleB" />

    <!-- 이메일 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleC"
        style="@style/sharpsansBold.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/home_text_12"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvTitleB"
        app:layout_constraintTop_toBottomOf="@id/tvTitleB" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmail"
        style="@style/robotoRegular.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/home_text_14"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleC"
        app:layout_constraintStart_toEndOf="@id/tvTitleC"
        app:layout_constraintTop_toTopOf="@id/tvTitleC" />

    <!-- 버전 정보 -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVersion"
        style="@style/sharpsansBold.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/home_text_13"
        android:textColor="@color/color_999999"
        app:layout_constraintStart_toStartOf="@id/tvTitleC"
        app:layout_constraintTop_toBottomOf="@id/tvTitleC" />

</androidx.constraintlayout.widget.ConstraintLayout>